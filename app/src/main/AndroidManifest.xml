<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="financialcalculators.tarun.com.financalculator" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="nosensor" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SimpleCalculatorActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/simple_calculator"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name=".activities.SimpleMortgageCalculatorActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/simple_mortgage"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/action_settings"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name=".activities.DemographicsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_demographics"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name=".activities.DemographicsDetailTabbedActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_demographics_detail_tabbed" >
        </activity>
    </application>

</manifest>
